generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ==================== Auth ====================
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  hashedPassword String?  // For Email/Password auth
  role          String    @default("USER") // "USER" | "ADMIN" | "EDITOR"
  createdAt     DateTime  @default(now())

  // Relations
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  comments      Comment[]
  likes         Like[]
  views         View[]
  messages      ContactMessage[]
  aiLogs        AILog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== Posts ====================
model Post {
  id            String   @id @default(cuid())

  title         String
  slug          String   @unique
  content       String
  coverImage    String?

  published     Boolean  @default(false)
  featured      Boolean  @default(false)
  isAIEnhanced  Boolean  @default(false)

  tags          String[] @default([])
  seoKeywords   String[] @default([])

  seoTitle       String?
  seoDescription String?

  // Relation
  authorId String
  author   User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  comments Comment[]
  likes    Like[]
  views    View[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}


// ==================== Comments & Likes ====================
model Comment {
  id        String   @id @default(cuid())
  content   String
  postId    String
  authorId  String
  createdAt DateTime @default(now())

  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model Like {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  createdAt DateTime @default(now())

  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
}

// ==================== Contact Messages ====================
model ContactMessage {
  id         String   @id @default(cuid())
  authorId   String
  author     User     @relation(fields: [authorId], references: [id])
  message    String
  subject    String?
  phoneNumber String?
  read       Boolean  @default(false)
  createdAt  DateTime @default(now())
}

// ==================== Settings ====================
model Setting {
  id           String   @id @default(cuid())
  siteName     String
  logo         String?
  favicon      String?

  socialLinks  Json     // { facebook, twitter, linkedin, instagram, youtube }
  contactInfo  Json     // { email, phone, address }

  updatedAt    DateTime @updatedAt
}

// ==================== Analytics ====================
model View {
  id        String   @id @default(cuid())
  postId    String
  userId    String?  // optional, if user is logged in
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

// ==================== AI Logs (اختياري) ====================
model AILog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // "Generate Post" | "Rewrite" | "Fix Grammar" | etc
  prompt    String
  output    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
